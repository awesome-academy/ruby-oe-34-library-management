<% provide(:title, t("borrow.bo")) %>
<% provide(:button_text, t("borrow.bo")) %>
<h1><%= t "borrow.bo" %></h1>
  <%= form_for @request_borrow_book do |f| %>
    <% load_user_and_book session[:user_id], params[:book_id]%>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :user_id %> : <%=  @list[:user].full_name %>
    <%= f.text_field :user_id,
      :value => @list[:user].id, hidden: true, class: "form-control" %>
    <br/>
    <%= f.label :book_id %> :
    <%= f.text_field :book_id,
      :value => @list[:book].name, class: "autocomplete" %>
    <br/>
    <%= f.label :start_date %>
    <%= f.date_field :start_date, min: Date.today,
      value: Date.today, class: "form-control" %>
    <%= f.label :end_date %>
    <%= f.date_field :end_date, min: Date.today, class: "form-control" %>
    <br/>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
</div>

<script type="text/javascript">
  $(document.getElementById("request_borrow_book_book_id")).click(function() {
    var countries = "<%= list_book %>";
    var out = countries.split(", ");
    autocomplete(document.getElementById("request_borrow_book_book_id"), out);
  });
</script>

